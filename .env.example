# Biliboard Environment Configuration
# Copy this file to .env and modify as needed

# ============================================
# Application Settings
# ============================================
HTTP_PORT=80
HTTPS_PORT=443

# ============================================
# Database
# ============================================
DATABASE_URL=sqlite:///app/data/prod.db

# ============================================
# MQTT Configuration
# ============================================
MQTT_HOST=emqx.digiplc.cn
MQTT_PORT=1883

# ============================================
# Monitoring
# ============================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_secure_password_here
GRAFANA_ROOT_URL=http://localhost:3000

# ============================================
# Logging
# ============================================
RUST_LOG=info

# ============================================
# Backup Configuration
# ============================================
# Cron schedule (default: every 6 hours)
BACKUP_SCHEDULE=0 */6 * * *
# Days to retain backups (default: 7)
BACKUP_RETENTION_DAYS=7
